@{
    ViewData["Title"] = "Добавление услуг";
    Layout = "_Layout";
}
<link href="~/css/IndexStyle.css" rel="stylesheet" />
@{
    bool isAdmin;
    if (ViewBag.IsAdmin != null && ViewBag.IsAdmin == true)
    {
        isAdmin = true;
    }
    else
    {
        isAdmin = false;
    }
}

@if(!isAdmin)
{
    <div class="form-container">
        <div class="request-form center">
            <div>
                <form action="~/Web/AddService" method="post">
                    <label>Заголовок услуги</label><br />
                    <input type="text" name="name" value="" /><br />
                    <label>Описание услуги</label><br />
                    <textarea name="description" rows="3" class="description"></textarea><br /><br />
                    <p><input type="submit" style="margin-top:20px" class="styled-button" value="Добавить" /></p>
                </form>
            </div>
        </div>
    </div>
}

