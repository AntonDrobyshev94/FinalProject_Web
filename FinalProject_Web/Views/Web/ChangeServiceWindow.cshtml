@{
    ViewData["Title"] = "Изменение услуг";
    Layout = "_Layout";
}
<link href="~/css/IndexStyle.css" rel="stylesheet" />
@using FinalProject_Web.Model;
@{
    bool isAdmin;
    if (ViewBag.IsAdmin != null && ViewBag.IsAdmin == true)
    {
        isAdmin = true;
    }
    else
    {
        isAdmin = false;
    }
}
@model Service
@if (!isAdmin)
{
    <div class="form-container">
        <div class="request-form center">
            <div>
                <form action="~/Web/ChangeService" method="post">
                    <label>Название услуги</label><br />
                    <input type="text" name="name" value="@Model.Name" /><br />
                    <label>Описание услуги</label><br />
                    <textarea name="description" rows="3" class="description">@Model.Description</textarea><br /><br />
                    <input type="hidden" name="id" value="@Model.Id">
                    <p><input type="submit" style="margin-top:20px" class="styled-button" value="Подтвердить изменения" /></p>
                </form>
            </div>
        </div>
    </div>
}
