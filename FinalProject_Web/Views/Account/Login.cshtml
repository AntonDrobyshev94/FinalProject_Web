@model FinalProject_Web.AuthFinalProjectApp.UserLogin 
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-container-row">
        <div class="login-container-class">
            <h3 class="text-center">Вход</h3>

            <form asp-action="Login" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="login-container-class-form">
                    <div class="form-group">
                        <input asp-for="LoginProp" placeholder="Логин" />
                        <input asp-for="Password" placeholder="Пароль" />
                    </div>
                    <button type="submit" style="width:200px" class="styled-button">Войти</button>
                </div>
            </form>
            @if (TempData["AlertLogin"]!=null)
            {
                <div class="alert">@TempData["AlertLogin"]</div>
            }
        </div>
    </div>
</div>

